<Window x:Class="WindowRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowRecorder"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        MinHeight="360" MinWidth="640"
        Style="{StaticResource MaterialDesignWindow}">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <local:ResolutionTextConverter x:Key="ResolutionTextConverter" />
        <local:SIConverter x:Key="SIConverter" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="20">
                    <Grid Margin="0, 0, 0, 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Column="0" Fill="{DynamicResource MaterialDesign.Brush.Primary}" />
                        <TextBlock Grid.Column="0" Text="윈도우 선택" VerticalAlignment="Center" HorizontalAlignment="Left" TextAlignment="Left" Padding="10, 0, 10, 0" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                        <ComboBox ItemsSource="{Binding Windows}" DisplayMemberPath="Title" SelectedItem="{Binding SelectedWindow, Mode=TwoWay, ValidatesOnDataErrors=True}" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="10, 0, 10, 0" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding IsRecording}" Value="False">
                                            <Setter Property="IsEnabled" Value="True"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                        <Button Grid.Column="2" Command="{Binding GetWindowListCommand}" Padding="0" Height="30" Width="30" materialDesign:ButtonAssist.CornerRadius="0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding IsRecording}" Value="False">
                                            <Setter Property="IsEnabled" Value="True"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Image Source="/Resources/refresh_24dp_434343_FILL0_wght300_GRAD0_opsz24.png" Margin="5" />
                        </Button>
                    </Grid>

                    <Grid Margin="0, 0, 0, 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Column="0" Fill="{DynamicResource MaterialDesign.Brush.Primary}" />
                        <TextBlock Grid.Column="0" Text="저장 경로" VerticalAlignment="Center" HorizontalAlignment="Left" TextAlignment="Left" Padding="10, 0, 10, 0" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                        <Border Grid.Column="1" BorderThickness="1" BorderBrush="{DynamicResource MaterialDesign.Brush.Primary}">
                            <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding RecordSettingData.SavePath}" VerticalAlignment="Center" Padding="10, 0, 10, 0" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}">
                            </TextBlock>
                        </Border>
                        <Button Grid.Column="2" Command="{Binding SetFilePathCommand}" Padding="0" Height="30" Width="30" materialDesign:ButtonAssist.CornerRadius="0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding IsRecording}" Value="False">
                                            <Setter Property="IsEnabled" Value="True"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Image Source="/Resources/folder_open_24dp_434343_FILL0_wght300_GRAD0_opsz24.png" Margin="5" />
                        </Button>
                        <Button Grid.Column="3" Command="{Binding OpenFilePathCommand}" Style="{StaticResource MaterialDesignFlatButton}" Padding="0" Height="30" Width="30" materialDesign:ButtonAssist.CornerRadius="0">
                            <Image Source="/Resources/folder_24dp_434343_FILL0_wght300_GRAD0_opsz24.png" Margin="5" />
                        </Button>
                    </Grid>

                    <Grid Margin="0, 10, 0, 30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Column="0" Fill="{DynamicResource MaterialDesign.Brush.Primary}" Height="1" />
                        <TextBlock Grid.Column="1" Text="영상 설정" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Padding="10, 0, 10, 0"/>
                        <Rectangle Grid.Column="2" Fill="{DynamicResource MaterialDesign.Brush.Primary}" Height="1" />
                    </Grid>

                    <Grid Margin="0, 0, 0, 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Column="0" Fill="{DynamicResource MaterialDesign.Brush.Primary}" />
                        <TextBlock Grid.Column="0" Text="해상도" VerticalAlignment="Center" HorizontalAlignment="Left" TextAlignment="Left" Padding="10, 0, 10, 0" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                        <ComboBox ItemsSource="{Binding Resolutions}" SelectedItem="{Binding SelectedResolution, Mode=TwoWay, ValidatesOnDataErrors=True}" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Padding="10, 0, 10, 0" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource ResolutionTextConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding IsRecording}" Value="False">
                                            <Setter Property="IsEnabled" Value="True"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>
                    </Grid>

                    <Grid Margin="0, 0, 0, 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Column="0" Fill="{DynamicResource MaterialDesign.Brush.Primary}" />
                        <TextBlock Grid.Column="0" Text="비트레이트" VerticalAlignment="Center" HorizontalAlignment="Left" TextAlignment="Left" Padding="10, 0, 10, 0" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                        <Rectangle Grid.Column="1" Fill="{DynamicResource MaterialDesign.Brush.Primary}" Height="1" VerticalAlignment="Bottom"/>
                        <TextBox Grid.Column="2" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Padding="5, 0, 5, 0" MaxLength="9" MinWidth="50" Text="{Binding RecordSettingData.Bitrate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding IsRecording}" Value="False">
                                            <Setter Property="IsEnabled" Value="True"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBlock Grid.Column="3" Text="bps" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Padding="10, 0, 10, 0" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                        <Rectangle Grid.Column="4" Fill="{DynamicResource MaterialDesign.Brush.Primary}" Width="1" Margin="0, 5, 0, 5"/>
                        <TextBlock Grid.Column="5" Text="{Binding RecordSettingData.Bitrate, Converter={StaticResource SIConverter}, StringFormat='{}{0}bps'}" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Padding="10, 0, 10, 0" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                    </Grid>

                    <Grid Margin="0, 0, 0, 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Column="0" Fill="{DynamicResource MaterialDesign.Brush.Primary}" />
                        <TextBlock Grid.Column="0" Text="프레임레이트" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Padding="10, 0, 10, 0" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                        <Rectangle Grid.Column="1" Fill="{DynamicResource MaterialDesign.Brush.Primary}" Height="1" VerticalAlignment="Bottom"/>
                        <TextBox Grid.Column="2" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Padding="5, 0, 5, 0" MaxLength="3" MinWidth="50" Text="{Binding RecordSettingData.Framerate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}">
                            <TextBox.Style>
                                <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding IsRecording}" Value="False">
                                            <Setter Property="IsEnabled" Value="True"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        <TextBlock Grid.Column="3" Text="FPS" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Padding="10, 0, 10, 0" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                    </Grid>

                    <Grid Margin="0, 0, 0, 20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="30"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Column="0" Fill="{DynamicResource MaterialDesign.Brush.Primary}" />
                        <TextBlock Grid.Column="0" Text="사운드 포함" VerticalAlignment="Center" HorizontalAlignment="Left" TextAlignment="Left" Padding="10, 0, 10, 0" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}"/>
                        <Rectangle Grid.Column="1" Fill="{DynamicResource MaterialDesign.Brush.Primary}" Height="1" VerticalAlignment="Bottom"/>
                        <Rectangle Grid.Column="2" Fill="{DynamicResource MaterialDesign.Brush.Primary}" Height="1" VerticalAlignment="Bottom"/>
                        <CheckBox Grid.Column="2" IsChecked="{Binding RecordSettingData.IsIncludeSound}" materialDesign:CheckBoxAssist.CheckBoxSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" >
                            <CheckBox.Style>
                                <Style TargetType="CheckBox" BasedOn="{StaticResource {x:Type CheckBox}}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding IsRecording}" Value="False">
                                            <Setter Property="IsEnabled" Value="True"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>
                    </Grid>
                </StackPanel>
            </ScrollViewer>


            <Button Grid.Row="1" FontSize="16" Command="{Binding RecordButtonCommand}" IsEnabled="{Binding CanRecord}" Height="auto" materialDesign:ButtonAssist.CornerRadius="0" Margin="10">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsRecording}" Value="True">
                                <Setter Property="Content" Value="녹화 중지"/>
                                <Setter Property="BorderBrush" Value="Red"/>
                                <Setter Property="Foreground" Value="Red"/>
                                <Setter Property="materialDesign:RippleAssist.Feedback" Value="Red"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsRecording}" Value="False">
                                <Setter Property="Content" Value="녹화 시작"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
        <Rectangle Grid.Column="1" Fill="#E6E6E6"/>
        <Image Grid.Column="1" x:Name="liveRecordingShow" Source="{Binding Bs}" Stretch="Uniform"/>
    </Grid>
</Window>
